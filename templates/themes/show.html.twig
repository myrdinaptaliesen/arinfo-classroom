{% extends 'base.html.twig' %}

{% block title %}Themes
{% endblock %}

{% block body %}
	<div class="container">
		<h1>{{theme.titleTheme}}</h1>

		<section class="themeSection">
			{% for chapter in theme.chapters %}


				<a class="linkTheme" href="{{ path('chapters_show', {'id': chapter.id}) }}">
					<div class="card" style="width: 360px;">
						<img src="{{asset('uploads/pictures/' ~ chapter.pictureChapter) }}" class="card-img-top">
						<div class="card-body">
							<h5 class="card-title">{{chapter.titleChapter}}</h5>
						</div>
					</div>
				</a>

			{% endfor %}

		</section>
		<a href="{{ path('home') }}">Retour Ã  l'accueil</a>

		
	{% endblock %}
