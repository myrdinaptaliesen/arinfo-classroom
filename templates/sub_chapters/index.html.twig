{% extends 'base.html.twig' %}

{% block title %}SubChapters index{% endblock %}

{% block body %}
    <h1>SubChapters index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TitleSubChapter</th>
                <th>VideoSubChapter</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sub_chapter in sub_chapters %}
            <tr>
                <td>{{ sub_chapter.id }}</td>
                <td>{{ sub_chapter.titleSubChapter }}</td>
                <td>{{ sub_chapter.videoSubChapter }}</td>
                <td>
                    <a href="{{ path('sub_chapters_show', {'id': sub_chapter.id}) }}">show</a>
                    <a href="{{ path('sub_chapters_edit', {'id': sub_chapter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sub_chapters_new') }}">Create new</a>
{% endblock %}
