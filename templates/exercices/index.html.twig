{% extends 'base.html.twig' %}

{% block title %}Exercices index{% endblock %}

{% block body %}
    <h1>Exercices index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre de l'exercise</th>
                <th>Description</th>
                <th>Sous chapitre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exercice in exercices %}
            <tr>
                <td>{{ exercice.id }}</td>
                <td>{{ exercice.titleExercise }}</td>
                <td>{{ exercice.descriptionExercice }}</td>
                <td>{{ exercice.subChapters.titleSubChapter }}</td>
                <td>
                    <a href="{{ path('exercices_show', {'id': exercice.id}) }}">Voir</a>
                    <a href="{{ path('exercices_edit', {'id': exercice.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('exercices_new') }}">Créer un nouvel exercice</a>
{% endblock %}
